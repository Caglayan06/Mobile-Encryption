<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.encrypt.mobileencryption.MenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sht"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="270dp">


        <Button
            android:id="@+id/btnAddPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnMessages"
            android:layout_alignTop="@+id/btnGallery"
            android:background="@android:color/holo_green_light"
            android:drawableTop="@drawable/galleryicon"
            android:text="ADD IMAGE" />

        <Button
            android:id="@+id/btnMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="65dp"
            android:layout_marginTop="102dp"
            android:background="@android:color/holo_green_light"
            android:drawableTop="@drawable/messageicon"
            android:text="MESSAGES" />

        <Button
            android:id="@+id/btnNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnMessages"
            android:layout_alignBottom="@+id/btnMessages"
            android:layout_alignParentStart="true"
            android:layout_marginStart="51dp"
            android:background="@android:color/holo_green_light"
            android:drawableTop="@drawable/noteicon"
            android:text="NOTES" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnNotes"
            android:layout_below="@+id/btnNotes"
            android:layout_marginTop="64dp"
            android:background="@android:color/holo_green_light"
            android:drawableTop="@drawable/galleryicon"
            android:text="GALLERY" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnNotes"
            android:layout_marginBottom="71dp"
            android:text="Button" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
